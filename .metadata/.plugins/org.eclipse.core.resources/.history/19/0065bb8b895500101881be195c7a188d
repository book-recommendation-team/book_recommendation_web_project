package controller;

import dto.CelebRecommendations;

import javax.servlet.*;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.*;
import java.io.IOException;
import java.util.ArrayList;

@WebServlet("/celebList")
public class CelebListServlet extends HttpServlet {
    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        ArrayList<CelebRecommendations> celebList = new ArrayList<>();

        // 💡 테스트용 셀럽 3명
        celebList.add(new CelebRecommendations(1, "박찬욱", "영화감독 박찬욱이 추천한 책 모음", "./img/박찬욱.jpg", null));
        celebList.add(new CelebRecommendations(2, "아이유", "가수 아이유가 읽고 감동한 책 리스트", "https://i.namu.wiki/i/_7Dkd_-bXrEjsTbhtFb5EulxPchNs8giDW0IUGLeAR5geSKBW4NDRuYb7MWjDb8nvXt_9YoIQ3EJ81NEHCEmHg.webp", null));
        celebList.add(new CelebRecommendations(3, "RM", "방탄소년단 RM의 책장 속 인생 책들", "https://image.jtbcplus.kr/data/contents/jam_photo/202311/10/4d9a8b7a-9646-45a7-a94b-103fdb55c2fc.jpg", null));

        request.setAttribute("celebList", celebList);

        RequestDispatcher dispatcher = request.getRequestDispatcher("/celebList.jsp");
        dispatcher.forward(request, response);
    }
}
