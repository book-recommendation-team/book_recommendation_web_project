<!-- ìŠ¤í¬ë¦½íŠ¸ -->
<script>
	const bannerImage = document.getElementById("banner-image");

    const bannerImages = [
        "img/ì¶”ì²œ 1.png",
        "img/ì¶”ì²œ 2.png",
        "img/í˜¼ëª¨ë…¸ ì¶”ì²œ.jpg",
        "img/ì¶”ì²œ 4.png",
        "img/ìº˜ë¦°ë”.jpg"
    ];

    const bannerMap = {
        weekly: 1,
        new: 2,
        featured: 0,
        hot: 3,
        exclusive: 4
    };

    let index = 0;
    let playing = true;
    let interval = setInterval(nextImage, 3000);

    function updateImage() {
        bannerImage.src = bannerImages[index];
    }

    function nextImage() {
        index = (index + 1) % bannerImages.length;
        updateImage();
    }

    function prevImage() {
        index = (index - 1 + bannerImages.length) % bannerImages.length;
        updateImage();
    }

    function toggleSlide() {
        const btn = document.getElementById("pause-btn");
        if (playing) {
            clearInterval(interval);
            btn.textContent = "â–¶";
        } else {
            interval = setInterval(nextImage, 3000);
            btn.textContent = "â¸";
        }
        playing = !playing;
    }

    function changeBanner(type) {
        if (bannerMap[type] !== undefined) {
            index = bannerMap[type];
            updateImage();
        }
    }
</script>

